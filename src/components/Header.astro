---
import Menu from "./Menu.astro";
import Navigation from "./Navigation.astro";
---
<header>
    <nav>
        <Menu />
        <Navigation />
    </nav>
</header>

<style>
    nav {
    display: flex;
    gap: 1rem;
  }
  a{
    padding: 0.5rem 1rem;
    color: white;
    background-color: #4c1d95;
    text-decoration: none;
    border-radius: 0.5rem;
    display: flex;
    align-items: center;
  }
  nav a:hover {
    background-color: #6b21a8;
  }
  nav a:active {
    background-color: #8b34c4;
  }
  nav a:focus {
    background-color: #a947e0;
  }
</style>